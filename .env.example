# Environment Variables Template for DeepIQ Website
# Copy this file to .env.local for local development
# Add these variables in Vercel Dashboard for production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://deepiq.com
NEXT_PUBLIC_SITE_NAME=DeepIQ

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Contact Form (Optional - for future implementation)
CONTACT_FORM_EMAIL_TO=contact@deepiq.com
SENDGRID_API_KEY=
MAILGUN_API_KEY=

# HubSpot Integration (Optional - for future implementation)
HUBSPOT_API_KEY=
HUBSPOT_PORTAL_ID=

# AWS S3 (Optional - for assets)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_WIDGET=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# API Endpoints (Optional)
NEXT_PUBLIC_API_BASE_URL=https://api.deepiq.com
API_SECRET_KEY=

# Vercel Specific (Auto-populated in Vercel)
# VERCEL_URL
# VERCEL_ENV
# VERCEL_GIT_COMMIT_SHA
# VERCEL_GIT_COMMIT_MESSAGE